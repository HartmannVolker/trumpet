{
  "hosting": {
    "public": "dist/default",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "index.html"
      },
      {
        "source": "/registration",
        "function": "checkRegistration"
      },
      {
        "source": "/verifyMail",
        "function": "emailVerificationHandler"
      }
    ]
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  }
}
