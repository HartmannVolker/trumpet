{
  "name": "trumpet",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html",
    "test": "jest",
    "test:cypress": "cypress run --record",
    "test:integration": "start-server-and-test start http://localhost:1234 test:cypress",
    "clean": "rm -rf .cache dist functions/lib",
    "build:hosting": "parcel build src/index.html --detailed-report --public-url '.'",
    "build:functions": "cd functions && yarn build",
    "build": "yarn build:functions && yarn build:hosting",
    "serve": "yarn clean && yarn build && firebase emulators:start",
    "deploy:dev": "yarn clean && yarn build && firebase use default && firebase deploy",
    "deploy:prod": "yarn clean && yarn build --no-source-maps && firebase use prod && firebase deploy"
  },
  "dependencies": {
    "@denysvuika/preact-translate": "^0.2.5",
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",
    "@sentry/browser": "^5.15.2",
    "axios": "^0.19.2",
    "firebase-functions": "^3.5.0",
    "preact": "^10.3.4",
    "react-google-recaptcha-v3": "^1.4.1",
    "react-hook-form": "^5.1.3"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.1.3",
    "@types/jest": "^25.1.4",
    "@types/workbox-sw": "^4.2.0",
    "cypress": "^4.2.0",
    "firebase-tools": "^7.16.1",
    "jest": "^25.2.2",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-purgecss": "^2.1.3",
    "start-server-and-test": "^1.10.11",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/test/integration"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "clearMocks": true,
    "coverageDirectory": "coverage"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
