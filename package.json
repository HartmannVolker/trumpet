{
  "name": "trumpet",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "rm -f public/sw.js && next",
    "build": "next build",
    "start": "next start",
    "serve": "yarn build && yarn start",
    "type-check": "tsc",
    "test": "jest",
    "test:cypress": "cypress run --record --parallel",
    "test:integration": "start-server-and-test serve http://localhost:3000 test:cypress",
    "coverage:clear": "rm -rf coverage",
    "coverage:merge": "istanbul-merge --out coverage/merged/coverage-final.json ./coverage/unit/coverage-final.json ./coverage/integration/coverage-final.json",
    "coverage:merge-report": "nyc report --reporter=lcov --reporter=text --temp-dir=./coverage/merged --report-dir=./coverage/merged"
  },
  "dependencies": {
    "@brainhubeu/react-carousel": "^1.19.14",
    "@material-ui/core": "^4.11.0",
    "@sentry/browser": "^5.19.0",
    "@sentry/node": "^5.19.0",
    "@sentry/webpack-plugin": "^1.12.0",
    "@zeit/next-source-maps": "^0.0.4-canary.1",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.13.0",
    "next": "^9.4.4",
    "next-absolute-url": "^1.2.2",
    "next-auth": "^2.2.0",
    "next-pwa": "^3.0.1",
    "next-translate": "^0.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-google-recaptcha-v3": "^1.5.2",
    "react-hook-form": "^6.0.1",
    "telegraf": "^3.38.0",
    "xlsx": "^0.16.3"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.8.1",
    "@testing-library/cypress": "^6.0.0",
    "@types/brainhubeu__react-carousel": "^1.15.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/testing-library__cypress": "^5.0.6",
    "autoprefixer": "^9.8.4",
    "cypress": "^4.9.0",
    "firebase-tools": "^8.4.3",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-merge": "^1.1.1",
    "jest": "^26.1.0",
    "jimp": "^0.14.0",
    "nyc": "^15.1.0",
    "postcss-import": "^12.0.1",
    "start-server-and-test": "^1.11.0",
    "tailwindcss": "^1.4.6",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6",
    "vercel": "^19.1.1"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/cypress"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "clearMocks": true,
    "coverageDirectory": "coverage/unit"
  },
  "nyc": {
    "report-dir": "coverage/integration",
    "reporter": [
      "text",
      "json",
      "lcov"
    ]
  }
}
